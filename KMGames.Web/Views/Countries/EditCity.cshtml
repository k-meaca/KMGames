@model KMGames.Web.ViewModel.Cities.CityEditVm

@{
    ViewBag.Title = "EditCity";
}

<h2>Edit city for</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CityId)
    @Html.HiddenFor(model => model.RowVersion)
    @Html.HiddenFor(model => model.CountryId)

    <div class="form-horizontal">
        <hr />
        <div class="form-group mt-3">
            @Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CountryId, Model.Countries, "Select a country", new { @class = "form-control", @disabled="disabled" })
                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-sm btn-outline-success bg-success bg-opacity-10 col-1 me-2">
                    <i class="fa fa-feather-alt"></i>
                    Edit
                </button>
                @*<input type="submit" value="Edit" class="btn btn-sm btn-outline-success bg-success bg-opacity-10 col-1 me-2" />*@

                <a class="btn btn-sm btn-outline-danger bg-danger bg-opacity-10 col-1" href="@Url.Action($"/Details/{Model.CountryId}","Countries")">
                    <i class="fa fa-undo"></i>
                    Cancel
                </a>
                @*@Html.ActionLink("Cancel", $"/Details/{Model.CountryId}", null, new { @class = "btn btn-sm btn-outline-danger bg-danger bg-opacity-10 col-1" })*@
            </div>
        </div>
    </div>
}
