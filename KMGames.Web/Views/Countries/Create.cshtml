@model KMGames.Web.ViewModel.Country.CountryEditVm

@{
    ViewBag.Title = "Create";
}

<h2>Add country</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-4" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10 justify-content-center">
                <button class="btn btn-outline-primary bg-opacity-10 bg-primary btn-sm col-1 me-2" type="submit">
                    <i class="fa fa-check"></i>
                    Add
                </button>
                @*<input type="submit" value="Add" class="btn btn-outline-primary bg-opacity-10 bg-primary btn-sm col-1 me-2" />*@

                <a class="btn btn-sm btn-outline-danger bg-danger bg-opacity-10 col-1" href="@Url.Action("Index","Countries")">
                    <i class="fa fa-undo"></i>
                    Cancel
                </a>
                @*@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-danger bg-opacity-10 bg-danger btn-sm col-1" })*@
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
