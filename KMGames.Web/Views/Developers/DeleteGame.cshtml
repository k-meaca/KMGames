@model KMGames.Web.ViewModel.Games.GameEditVm

@{
    ViewBag.Title = "DeleteGame";
}

<h3>You are going to delete this game from:</h3>
<div>
    <hr />
    <div class="container h5" style="background-color: #1f1f20; color: #dee2e6;">
        <div class="row">
            <div class="col">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.DeveloperId)
                    </dt>

                    <dd>
                        @Html.DropDownListFor(model => model.DeveloperId, Model.Developers, new { @class = "form-control h5 mt-3", @disabled = "disabled" })
                    </dd>
                </dl>
            </div>
            <div class="col">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control h5 mt-3", @disabled = "disabled" })
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.ActualPrice)
                    </dt>

                    <dd>
                        @Html.TextBoxFor(model => model.ActualPrice, new { @class = "form-control h5 mt-3", @disabled = "disabled" })
                    </dd>
                </dl>
            </div>
            <div class="col">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Release)
                    </dt>

                    <dd>
                        @Html.TextBoxFor(model => model.Release, "{0:yyyy-MM-dd}", new { @class = "form-control h5 mt-3", @type = "date", @disabled = "disabled" })
                    </dd>
                </dl>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-3">
                <button class="btn btn-sm btn-outline-warning bg-warning bg-opacity-10 col-1 me-2" type="submit">
                    <i class="fa fa-trash-alt"></i>
                    Delete
                </button>
                @*<input type="submit" value="Delete" class="btn btn-sm btn-outline-warning bg-warning bg-opacity-10 col-1 me-2" />*@

                <a class="btn btn-sm btn-outline-danger bg-danger bg-opacity-10 col-1" href="@Url.Action($"/Details/{Model.DeveloperId}","Developers")">
                    <i class="fa fa-undo"></i>
                    Cancel
                </a>
                @*@Html.ActionLink("Cancel", $"/Details/{Model.DeveloperId}", null, new { @class = "btn btn-sm btn-outline-danger bg-danger bg-opacity-10 col-1" })*@
            </div>
        }
    </div>

</div>
