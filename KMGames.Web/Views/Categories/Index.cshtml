<div class="d-flex justify-content-between w-75">

    <h2>Categories</h2>

    <a class="btn  btn-outline-light bg-secondary bg-opacity-25" href="@Url.Action("Create","Categories")">
        <i class="fa fa-plus-square"></i>
        New
    </a>
